<resources>

    <style name="AppTheme" parent="android:Theme.Light" />
    
    <style name="AppTheme.title">
        <item name="android:textSize">20sp</item>
	</style>
    
    <style name="normal_text">
	    <item name="android:typeface">normal</item>
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:textSize">14sp</item>
	</style>
	
    <style name="normal_text_black">
	    <item name="android:typeface">normal</item>
	    <item name="android:textColor">#000000</item>
	    <item name="android:textSize">14sp</item>
	</style>
	
    <style name="normal_text.header2">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
	</style>
	
    <style name="normal_text.bold">
        <item name="android:textSize">12sp</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
    <style name="normal_text.verybig">
	    <item name="android:textSize">45sp</item>
	</style>
    
    <style name="normal_text_black.bold">
        <item name="android:textStyle">bold</item>
	</style>
    
    <style name="normal_text_black.header2">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
	</style>
    
</resources>